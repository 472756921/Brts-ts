{
	"name": "brts-ts",
	"version": "1.0.0",
	"description": "支持 TS 的 Brts 应用",
	"main": "index.ts",
	"scripts": {
		"lint": "eslint --ext .ts --ext .tsx src/",
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "webpack --mode=production --config webpack/prod.js",
		"start": "webpack-dev-server --config webpack/dev.js --colors --watch",
		"sbuild": "webpack --config webpack/server.js",
		"commit": "git add . && git cz",
		"commitmsg": "validate-commit-msg",
		"push": "git add . && npm run commit && git push",
		"push-tag": "git push --follow-tags"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint",
			"pre-push": "npm run lint"
		}
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint --fix",
			"git add"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		},
		"ghooks": {
			"commit-msg": "commitmsg",
			"pre-push": "commitmsg"
		},
		"validate-commit-msg": {
			"types": [
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"perf",
				"test",
				"build",
				"ci",
				"chore",
				"revert"
			],
			"scope": {
				"required": true,
				"allowed": [
					"*"
				],
				"validate": false,
				"multiple": false
			},
			"warnOnFail": false,
			"maxSubjectLength": 100,
			"subjectPattern": ".+",
			"subjectPatternErrorMsg": "subject does not match subject pattern!",
			"helpMessage": "",
			"autoFix": false
		}
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.10.5",
		"@babel/node": "^7.10.5",
		"@babel/polyfill": "^7.10.4",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-react": "^7.10.4",
		"@babel/register": "^7.10.5",
		"@types/react": "^16.9.46",
		"@types/react-dom": "^16.9.8",
		"@types/react-router-dom": "^5.1.5",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.9.1",
		"babel-loader": "^8.1.0",
		"babel-plugin-import": "^1.13.0",
		"brts-changelog": "^1.0.5",
		"clean-webpack-plugin": "^3.0.0",
		"commitizen": "^4.2.3",
		"core-js": "^3.6.5",
		"css-loader": "^3.6.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.7.0",
		"eslint-plugin-react": "^7.20.6",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.3.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.5.4",
		"mini-css-extract-plugin": "^0.10.0",
		"mocker-api": "^2.3.5",
		"prettier": "^2.0.5",
		"style-loader": "^1.2.1",
		"ts-loader": "^8.0.2",
		"typescript": "^3.9.7",
		"url-loader": "^4.1.0",
		"validate-commit-msg": "^2.14.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0",
		"webpack-merge": "^5.0.9"
	},
	"dependencies": {
		"brts-design": "^1.0.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0"
	},
	"browserslist": [
		"> 1%",
		"not ie <= 8"
	]
}
